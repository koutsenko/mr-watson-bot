{
  "name": "mrwatson",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "compile": "tsc",
    "compile:watch": "tsc --watch",
    "clean": "rimraf dist",
    "build": "npm run clean && npm run compile",
    "start:verbose": "cross-env VERBOSE=true node dist/index.js",
    "start:prod": "node dist/index.js",
    "watch:verbose": "nodemon --exec npm run start:verbose",
    "watch:prod": "nodemon --exec npm run start:prod",
    "test": "jest",
    "cover": "jest --coverage",
    "lint": "eslint src/**/*.{ts,js} --fix",
    "lint:watch": "onchange src/**/*.{ts,js} -- eslint --fix {{changed}}",
    "words": "cd tools && node words.js"
  },
  "author": "",
  "license": "ISC",
  "nodemonConfig": {
    "watch": ["dist/*"],
    "delay": 1000,
    "signal": "SIGTERM"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "simple-import-sort",
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "env": {
      "node": true
    },
    "rules": {
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error",
      "prettier/prettier": "error",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/no-empty-interface": "off",
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "eslintIgnore": [
    "coverage",
    "data",
    "dist",
    "node_modules"
  ],
  "prettier": {
    "semi": true,
    "trailingComma": "none",
    "singleQuote": true,
    "printWidth": 120
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/jest": "^27.0.0",
    "@types/node": "^16.4.13",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "onchange": "^7.1.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@mtproto/core": "^6.0.1",
    "dateformat": "^4.5.1",
    "dotenv": "^10.0.0",
    "moment-timezone": "^0.5.33",
    "node-schedule": "^2.0.0",
    "prompt": "^1.1.0",
    "telegraf": "^4.4.0"
  }
}
